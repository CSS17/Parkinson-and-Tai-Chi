<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaiChiParkinson">


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        tools:layout_editor_absoluteX="0dp">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           >
         <TextView
             android:id="@+id/ParkinsonTitle"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:text="Parkinson Hastalığı Nedir?"
             android:textAlignment="center"
             android:textSize="30dp"
             android:textStyle="bold|italic"
             android:textColor="#F10B0B"
             android:background="@drawable/frame"

             >
         </TextView>

           <TextView
               android:id="@+id/ParkinsonInfo"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_marginLeft="5dp"
                android:visibility="gone"
               android:textColor="@color/black"
               android:textSize="20dp"
               android:textStyle="bold|italic"
               android:layout_marginTop="10dp"

               ></TextView>

           <TextView
               android:id="@+id/ParkinsonReasonsTitle"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:text="Parkinson Hastalığının Nedenleri Nelerdir?"
               android:textAlignment="center"
               android:textSize="30dp"
               android:textStyle="bold|italic"
               android:textColor="#F10B0B"
               android:background="@drawable/frame"
               >
           </TextView>

           <TextView
               android:id="@+id/ParkinsonReasonsInfo"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:textColor="@color/black"
               android:layout_marginLeft="5dp"
               android:textSize="20dp"
               android:textStyle="bold|italic"
               android:layout_marginTop="10dp"
               android:visibility="gone"
               ></TextView>

           <TextView
               android:id="@+id/SymptomsTitle"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:text="Parkinson Hastalığının Belirtileri Nelerdir?"
               android:textAlignment="center"
               android:textSize="30dp"
               android:textStyle="bold|italic"
               android:textColor="#F10B0B"
               android:background="@drawable/frame"
               >
           </TextView>

           <TextView
               android:id="@+id/SymptomsInfo"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:textColor="@color/black"
               android:layout_marginLeft="5dp"
               android:textSize="20dp"
               android:textStyle="bold|italic"
               android:layout_marginTop="10dp"
               android:visibility="gone"
               ></TextView>

           <TextView
               android:id="@+id/EffectsTitle"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:text="Parkinson Hastalığının Etkileri Nelerdir?"
               android:textAlignment="center"
               android:textSize="30dp"
               android:textStyle="bold|italic"
               android:textColor="#F10B0B"
               android:background="@drawable/frame"
               >
           </TextView>

           <TextView
               android:id="@+id/EffectsInfo"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:textColor="@color/black"
               android:layout_marginLeft="5dp"
               android:textSize="20dp"
               android:textStyle="bold|italic"
               android:layout_marginTop="10dp"
               android:visibility="gone"
               ></TextView>



       </LinearLayout>



    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>