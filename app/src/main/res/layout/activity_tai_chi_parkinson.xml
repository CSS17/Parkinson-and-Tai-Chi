    android:layout_height="match_parent"
    android:fillViewport="true">

  <LinearLayout
      android:id="@+id/generallayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <!-- Başlık 1 -->
    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

      <TextView
          android:layout_width="206dp"
          android:layout_height="58dp"
          android:text="Parkinson Hastalığı Nedir?"
          android:textAlignment="center"
          android:textColor="#F10B0B"
          android:textSize="18dp"
          android:textStyle="bold|italic" />

      <ImageButton
          android:id="@+id/ses_butonu_1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:backgroundTint="@color/teal_200"
          android:src="@drawable/volume_base" />

      <ToggleButton
          android:id="@+id/ParkinsonTitle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textOff="Göster"
          android:textOn="Gizle" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

      <!-- Başlık 1 altında gösterilecek metin -->
      <TextView
          android:id="@+id/ParkinsonInfo"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textColor="@color/black"
          android:textStyle="bold"
          android:padding="16dp"
          android:text="Parkinson hastalığı, beyinde dopamin adı verilen, beyin hücrelerinin birbirleriyle haberleşmesini sağlayan maddeyi üreten hücrelerin bozulması sonucu ortaya çıkar. Beyinde dopamini üreten hücreler hareketlerin kontrolünden, uyumundan ve akıcılığından sorumludur. \n\n Hareketlerde yavaşlık, dinlenme halindeyken titreme, psikiyatrik rahatsızlıklarla kendini belli eden hastalık, çoğunlukla 60 yaş sonrası kişilerde görülür. Ancak genetik nedenlerle 40’lı yaşlarda da rastlanabilir. Tedavide ilk seçenek ilaçlardır. Ancak bazı kişilerde ilaç tedavisi yetersiz kaldığında ya da yoğun yan etkiler gelişirse “beyin pili” yöntemi tercih edilebilir. \n\n Atipik Parkinson veya Parkinson plus hastalıklar erken dönemlerde Parkinson hastalığını taklit edebilirler. Klasik Parkinson diyebilmek için ana bulgulara ek olarak kısa dönem bile olsa hastanın Levodopa’ya yanıtı iyi olmalıdır. \n\n Atipik Parkinson hastalığı denildiğinde multiple sistem atrofisi, ilerleyici supranukleer palsi ve kortikobazal dejenerasyon dediğimiz hastalıkları sayabiliriz. İkincil parkinsonizm nondejeneratif olarak tanımlanabilen farklı nedenlerin sonucunda görülür; bunlar ilaç kullanımı, toksine maruz kalma, beyinde su toplama ya da beyin tümörü olabilir."
          android:textSize="16sp"
          android:visibility="gone" />
    </LinearLayout>

